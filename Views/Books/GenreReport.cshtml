@{
}

@model List<Book>

<h2>Genre Collection Report</h2>

<table class="table">
    <thead>
        <tr>
            <th>Genre</th>
            <th>Number of Books</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.GroupBy(b => b.Genre)
        .Select(g => new { Genre = g.Key, Count = g.Count() })
        .OrderBy(g => g.Genre))
        {
            <tr>
                <td>@genre.Genre</td>
                <td>@genre.Count</td>
            </tr>
        }
    </tbody>
</table>


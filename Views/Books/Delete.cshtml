@model Book

@{
    ViewData["Title"] = "Delete"; //you can only delete books that arent in a users library. Which makes sense
}
<div class="container text-center">
<h2>Delete</h2>
</div>
<div>
    <div class="box">
        <div class="container" id="" style="">
            <div class="row">
                <div class="col-sm-11">
                    <div class="panel panel-primary">
                        <div class="panel-heading"></div>
                        <div class="">
                            <label for="Label"></label>

                            <strong> @Html.DisplayNameFor(model => model.HyperLink):</strong>


                            @Html.DisplayFor(model => model.HyperLink)

                            <br /><br />

                            <strong> @Html.DisplayNameFor(model => model.Title):</strong>

                            @Html.DisplayFor(model => model.Title)
                            <br />
                            <br />

                            <strong> @Html.DisplayNameFor(model => model.Author):</strong>

                            @Html.DisplayFor(model => model.Author)

                            <br />
                            <br />

                            <strong>@Html.DisplayNameFor(model => model.AvgRating):</strong>

                            @Html.DisplayFor(model => model.AvgRating)

                            <br />
                            <br />

                            <strong>  @Html.DisplayNameFor(model => model.Genre):</strong>

                            @Html.DisplayFor(model => model.Genre)

                            <br />
                            <br />

                            <strong> @Html.DisplayNameFor(model => model.Summary):</strong>

                            @Html.DisplayFor(model => model.Summary)

                            <br />
                            <br />

                            <strong> @Html.DisplayNameFor(model => model.BookPhoto):</strong>
                            @if (Model.BookPhoto != null)
                            {
                                <img style="object-fit: contain;" width="100" height="100" src="@Url.Action("GetBookPhoto", "Books", new {Model.Id})" />
                            }

                        </div>

                    </div>
                </div>
            </div>
        </div><br>
    </div>
    <div>
        <h2>Are you sure you want to delete this?</h2>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
    </div>
</div>